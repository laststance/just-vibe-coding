{
  "name": "just-vibe-coding",
  "displayName": "Just Vibe Coding",
  "description": "A place to write code without purpose. Just vibe and code.",
  "version": "0.3.0",
  "publisher": "laststance",
  "author": {
    "name": "Laststance.io",
    "url": "https://github.com/laststance"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/laststance/just-vibe-coding"
  },
  "bugs": {
    "url": "https://github.com/laststance/just-vibe-coding/issues"
  },
  "homepage": "https://github.com/laststance/just-vibe-coding#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vibe",
    "coding",
    "playground",
    "scratch",
    "javascript",
    "python",
    "node",
    "console"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:just-vibe-coding.start",
    "workspaceContains:**/.just-vibe-coding/sessions/**/vibe.js",
    "workspaceContains:**/.just-vibe-coding/sessions/**/vibe.py"
  ],
  "contributes": {
    "commands": [
      {
        "command": "just-vibe-coding.start",
        "title": "Just Vibe Coding: Start"
      },
      {
        "command": "just-vibe-coding.runFile",
        "title": "Run File",
        "icon": "$(play)"
      },
      {
        "command": "just-vibe-coding.stopExecution",
        "title": "Stop Execution",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "just-vibe-coding.runFile",
          "when": "resourceFilename =~ /^vibe\\.(js|py)$/ && just-vibe-coding.inVibeSession && !just-vibe-coding.isRunning",
          "group": "navigation"
        },
        {
          "command": "just-vibe-coding.stopExecution",
          "when": "resourceFilename =~ /^vibe\\.(js|py)$/ && just-vibe-coding.inVibeSession && just-vibe-coding.isRunning",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "just-vibe-coding.runFile",
          "when": "resourceFilename =~ /^vibe\\.(js|py)$/ && just-vibe-coding.inVibeSession",
          "group": "1_vibe"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node dist/test/runTest.js",
    "package": "vsce package",
    "vscode:prepublish": "node esbuild.js --production"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.28.1"
}
